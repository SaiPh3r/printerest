<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-gray-100 flex items-center justify-center">
    <div class="w-[50vh] h-[70vh] bg-white px-8 py-6 rounded-2xl shadow-md">
      <h1 class="text-3xl text-center font-bold text-red-600 leading-none">Join Printerest</h1>
      <p class="text-gray-600 text-sm text-center mt-2">Get inspired and share your printing ideas</p>
      <form action="/register" method="post" class="mt-8">
        <input class="block mt-3 w-full px-4 py-3 border-2 border-gray-200 rounded-full focus:outline-none focus:border-gray-300" type="email" name="email" placeholder="Email">
        <input class="block mt-4 w-full px-4 py-3 border-2 border-gray-200 rounded-full focus:outline-none focus:border-gray-300" type="text" name="username" placeholder="Create a username">
        <input class="block mt-4 w-full px-4 py-3 border-2 border-gray-200 rounded-full focus:outline-none focus:border-gray-300" type="password" name="password" placeholder="Create a password">
        <input class="block mt-4 w-full px-4 py-3 border-2 border-gray-200 rounded-full focus:outline-none focus:border-gray-300" type="password" name="confirm-password" placeholder="Confirm password">
        <button type="submit" class='block w-full text-white bg-red-600 hover:bg-red-700 px-5 py-3 rounded-full mt-6 cursor-pointer font-medium drop-shadow-xl'>Sign Up</button>
      </form>
      <div class="text-center mt-6">
        <p class="text-xs text-gray-500">By continuing, you agree to Printerest's<br/><a href="#" class="text-red-600 hover:underline">Terms of Service</a> and <a href="#" class="text-red-600 hover:underline">Privacy Policy</a></p>
      </div>
      <div class="text-center mt-6 pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          Already a member? <a href="/" class="text-red-600 font-medium">Log in</a>
        </p>
      </div>
    </div>
  </div>


