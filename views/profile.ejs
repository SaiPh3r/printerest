<%- include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" >
        <input type="file" name="image">
    </form>
  <div class="profdets flex flex-col items-center mt-20">
    <div class="w-32 h-32 bg-zinc-200 rounded-full relative group">
      <!--  Profile Picture Icon -->
      <div id="uploadImage" class="absolute bottom-0 right-0 bg-zinc-700 p-2 rounded-full cursor-pointer hover:bg-zinc-600 transition-all duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
        </svg>
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-3">Harsh Sharma</h1>
    <h3 class="text-md text-zinc-400">@username</h3>
    <div class="flex gap-4 mt-5">
      <a href="/edit" class="px-7 py-2 bg-zinc-700 hover:bg-zinc-600 rounded-full text-xs font-semibold transition-all duration-200">Edit</a>
      <button class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-full shadow-md transition-all duration-200">Add Post</button>
    </div>
  </div>
  
  <div class="cards flex flex-wrap gap-10 px-10 mt-10">
    <div class="cursor-pointer hover:opacity-90 transition-all duration-200">
      <div class="w-52 h-40 bg-zinc-200 rounded-lg shadow-sm"></div>
      <h3 class="text-xl font-semibold mt-2">All Pins</h3>
      <h5 class="text-sm font-medium text-zinc-400">28 Pins</h5>
    </div>
  </div>
</div>
<script>
    document.querySelector('#uploadImage').addEventListener("click", function(){
        document.querySelector('#uploadform input').click();
    });

    document.querySelector('#uploadform input').addEventListener('change',function(){
        document.querySelector('#uploadform').submit()
    });
</script>

