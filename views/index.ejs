<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-gray-100 flex items-center justify-center">
  <div class="w-[50vh] h-[70vh] bg-white px-8 py-6 rounded-2xl shadow-md">
    <h1 class="text-3xl text-center font-bold text-red-600 leading-none">Welcome to Printerest</h1>
    <p class="text-gray-600 text-sm text-center mt-2">Share your printing ideas</p>
    <form action="" class="mt-8">
      <input class="block mt-3 w-full px-4 py-3 border-2 border-gray-200 rounded-full focus:outline-none focus:border-gray-300" type="text" name="username" placeholder="Username">
      <input class="block mt-4 w-full px-4 py-3 border-2 border-gray-200 rounded-full focus:outline-none focus:border-gray-300" type="password" name="password" placeholder="Password">
      <button type="submit" class='block w-full text-white bg-red-600 hover:bg-red-700 px-5 py-3 rounded-full mt-6 cursor-pointer font-medium drop-shadow-xl'>Log In</button>
    </form>
    <div class="text-center mt-6">
      <a href="#" class="text-sm text-red-600 hover:text-red-800">Forgot your password?</a>
    </div>

    <div class="text-center mt-8 pt-4 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        Not on Printerest yet? <a href="/register" class="text-red-600 font-medium">Sign up</a>
      </p>
    </div>
    
  </div>
</div>
<% include ./partials/footer.ejs %>